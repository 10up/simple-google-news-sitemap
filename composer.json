{
  "name": "10up/google-news-sitemap",
  "authors": [
    {
      "name": "10up",
      "email": "info@10up.com"
    }
  ],
  "require": {
    "php": ">=7.2"
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "require-dev": {
    "10up/phpcs-composer": "dev-master",
    "phpunit/phpunit": "^8.5",
    "yoast/phpunit-polyfills": "^1.0",
    "antecedent/patchwork": "^2.1",
    "10up/wp_mock": "^0.4.2"
  },
  "autoload": {
    "psr-4": {
      "SimpleGoogleNewsSitemap\\": "includes/classes/"
    }
  },
  "scripts": {
    "lint": "phpcs .",
    "lint-fix": "phpcbf .",
    "test": "phpunit",
    "setup-local-tests": "bash bin/install-wp-tests.sh tgns_wp_test root root localhost latest true"
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  }
}
